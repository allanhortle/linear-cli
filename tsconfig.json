{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": false,
    "outDir": "lib",
    "jsx": "react",
    "strict": true,
    "lib": ["ESNext"],
    "removeComments": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}
